generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("POSTGRES_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  customer Customer?

  @@map("users")
}

model Customer {
  userId Int @id

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("customers")
}
